{
  "name": "jenkins-credential-service",
  "version": "1.0.0",
  "description": "A Probot app that validates Jenkins credentials and provides scoped GitHub tokens",
  "author": "Your Name <your.email@example.com>",
  "license": "ISC",
  "homepage": "https://github.com/your-org/jenkins-credential-service",
  "keywords": [
    "probot",
    "github",
    "jenkins",
    "credentials",
    "entraid"
  ],
  "repository": "https://github.com/your-org/jenkins-credential-service.git",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run dev:api",
    "dev:api": "nodemon --exec \"npm run build && node ./lib/express-server.js\"",
    "dev:probot": "nodemon --exec \"npm run build && probot run ./lib/index.js\"",
    "dev:both": "concurrently \"npm run dev:probot\" \"npm run dev:api\"",
    "start": "npm run start:api",
    "start:api": "node ./lib/express-server.js",
    "start:probot": "probot run ./lib/index.js",
    "start:both": "concurrently \"npm run start:probot\" \"npm run start:api\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts"
  },
  "dependencies": {
    "@azure/msal-node": "^2.5.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "probot": "^12.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "smee-client": "^1.2.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "lib/**/*"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
